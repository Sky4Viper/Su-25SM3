 <animation>
  <type>material</type>
  <object-name>kontrlightbutton</object-name>
  <object-name>switchtext</object-name>
  <object-name>button_restart</object-name>
   <emission>
        <red>0.2</red>
        <green>0.2</green>
        <blue>0.2</blue>
            <factor-prop>controls/lighting/instruments-norm</factor-prop>
        </emission>
        <condition>
        	<property>/controls/power/battery</property>
          <not>
           <property>/controls/lighting/nightmode</property>
          </not>
        </condition>
 </animation>

 <animation>
  <type>material</type>
  <object-name>kontrlightbutton</object-name>
  <object-name>switchtext</object-name>
  <object-name>button_restart</object-name>
   <emission>
        <red>0.8</red>
        <green>0.3</green>
        <blue>0.1</blue>
            <factor-prop>controls/lighting/instruments-norm</factor-prop>
        </emission>
        <condition>
        <and>
        	<property>/controls/power/battery</property>
          <property>/controls/lighting/nightmode</property>
        </and>
        </condition>
 </animation>

 <animation>
    <type>material</type>
    <object-name>base1</object-name>
    <object-name>base2</object-name>
    <object-name>base3</object-name>
    	<emission>
      		<red>0.05</red>
      		<green>0.03</green>
      		<blue>0.02</blue>
      		<!-- <factor-prop>controls/lighting/panels-norm</factor-prop> -->
	        <factor-prop>controls/lighting/instruments-norm</factor-prop>
    	</emission>
      	<condition>
    		<property>/controls/power/battery</property>
    		<property>/controls/lighting/nightmode</property>
  		</condition>
  	</animation>

