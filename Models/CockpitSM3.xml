<?xml version="1.0"?>

<PropertyList>

    <path>CockpitSM3-7.ac</path>


	<!-- Pilot -->
	
	<model>
		<path>Aircraft/Su-25/Models/Pilot/Pilot.xml</path>
		<offsets>
			<x-m>-3.32</x-m>
			<y-m>0.00</y-m>
			<z-m>2.23</z-m>
			<pitch-deg>0</pitch-deg>
		</offsets>
		<condition>
			<not>
				<property>/sim/current-view/internal</property>
			</not>
		</condition>
	</model>
	
	<!-- Instruments -->
	
	<model>
		<path>Aircraft/Su-25/Models/Instruments/InstrumentsSM3.xml</path>
	</model>

	<animation>
    <type>material</type>
    <object-name>Panel</object-name>
    <object-name>Panel.Side</object-name>
    <emission>
      	<red>0.07</red>
        <green>0.03</green>
    	<blue>0.01</blue>
      <factor-prop>controls/lighting/panels-norm</factor-prop>
    </emission>
    	<condition>
    		<property>/controls/power/battery</property>
    		<property>/controls/lighting/nightmode</property>
  		</condition>
  	</animation>

	<!-- <effect>
        <inherits-from>Effects/model-interior</inherits-from>
	    <object-name>Panel</object-name>
    	<object-name>Panel.Side</object-name>
    </effect> -->

	<animation>
	 	<type>material</type> 
	 	<object-name>screw_slot_round_hq.002</object-name>
  		<specular>
   		<red>1.0</red>
   		<green>1.0</green>
   		<blue>1.0</blue>
  		</specular>
  		<shininess>105</shininess>
	</animation>

</PropertyList>
